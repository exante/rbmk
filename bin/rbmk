#!/usr/bin/env ruby

cfn = ARGV.first
if cfn.nil? or cfn.empty? then
	require 'rbmk/version'
	printf "rbmk version %s codename '%s' (github/stronny/rbmk)\n", RBMK::VERSION, RBMK::CODENAME
	puts "Usage: #{File.basename $0} FILENAME"
	exit
end

require 'rbmk/logger'
require 'rbmk/upstream'
require 'rbmk/server'
require 'rbmk/worker'

load File.expand_path(cfn)

$log = RBMK::Logger.instance

RBMK::Server.new.start
